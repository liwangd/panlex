{
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "manifest_version": 2,
  "name": "PanLex Translator",
  "description": "View translations of words from any language to any language",
  "version": "1.3.1",
  "options_page": "options_all.html",
  "icons": {
    "16": "static/icon16.png",
    "48": "static/icon48.png",
    "128": "static/icon128.png"
  },
  "browser_action": {
    "default_icon": "static/icon16.png",
    "default_popup": "options.html",
    "default_title": "PanLex"
  },
  "content_scripts": [
    {
      "matches": [
        "\u003Call_urls>"
      ],
      "js": [
        "jquery-2.1.4.min.js",
        "lang_map_js.js",
        "/myVar.js",
        "/lang_code_map.js",
        "lemmatizer/lemmatizerEnglish.js",
        "langid.js/langid-model-full.js",
        "langid.js/langid.js",
        "content.js"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "http://api.panlex.org/*",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    "js/*",
    "static/*",
    "dicts/*"
  ]
}
